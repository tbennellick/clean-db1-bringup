			gpios = <&gpio3 5 GPIO_ACTIVE_HIGH>;
			label = "EXG_CS_TEMP";
		};
		exg_start_conv: exg_start_conv {
			gpios = <&gpio1 10 GPIO_ACTIVE_HIGH>;
			label = "EXG_START_CONV";
		};
