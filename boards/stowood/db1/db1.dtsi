		rip_en: rip_en {
			gpios = <&gpio1 2 GPIO_ACTIVE_HIGH>;
			label = "RIP_EN";
		};
		exg_nrst: exg_nrst {
			gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
			label = "EXG_nRST";
		};
		exg_clksel: exg_clksel {
			gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>;
			label = "EXG_CLKSEL";
		};
		exg_npwdn: exg_npwdn {
