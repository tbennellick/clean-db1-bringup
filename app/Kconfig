menu "Zephyr"
source "Kconfig.zephyr"
endmenu

menu "Application Configuration"

config NASAL_TEMP_SAMPLE_PERIOD_MS
	int "Nasal temperature sample period in ms"
	default 10
	help
	  Configure the nasal temperature sample period in ms.
	  Default is 10ms.

config NASAL_TEMP_BLOCK_SIZE
	int "Number of temperature samples per block"
	default 800
	help
	  Configure the number of temperature samples collected per block
	  before sending to the message queue. Larger values use more memory
	  but reduce message queue overhead. Default is 100 samples.

endmenu

module = APP
module-str = APP
source "subsys/logging/Kconfig.template.log_config"

config DISPLAY_LOGO
	bool "Enable display logo"
	default y
	depends on DISPLAY
	help
	  Enable inclusion of the logo in the display output.
	  When disabled, the logo source files will not be compiled
	  and the logo will not be displayed.
